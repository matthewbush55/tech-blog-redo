<div class="card">
  <div class="card-header">
    <h4><a class="link" href="api/posts/{{id}}">{{title}}</a></h4>
    <p>Posted by {{user.username}} on {{format_date created_at}}</p>
  </div>
  <p class="card-body">{{contents}}</p>
  <p class="card-body">Comments:</p>
  {{#each comments as |comment|}}
    <p class="card-body">- {{comment.comment}} -{{comment.user.username}} on {{format_date comment.created_at}}</p>
  {{/each}}
</div>